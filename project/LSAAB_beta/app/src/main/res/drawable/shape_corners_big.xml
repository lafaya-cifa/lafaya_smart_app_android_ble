<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- 默认为rectangle，矩形 -->
    <stroke
        android:width="1dp"/>
    <padding
        android:bottom="2dp"
        android:left="5dp"
        android:right="5dp"
        android:top="2dp"
        />
    <stroke
        android:color="@color/transparent"
        android:width="1dp" />
    <size
        android:height="207dp"
        android:width="207dp" />
    <gradient
        android:type="radial"
        android:gradientRadius="118dp"
        android:endColor="@color/colorBackground"
        android:startColor="#dcdcdc"
        />
</shape>