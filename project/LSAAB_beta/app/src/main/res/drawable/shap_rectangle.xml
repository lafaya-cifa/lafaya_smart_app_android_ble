<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认为rectangle，矩形 -->
    <stroke
        android:color="@color/transparent"
        android:width="1dp"/>
    <padding
        android:bottom="2dp"
        android:left="5dp"
        android:right="5dp"
        android:top="2dp"
        />
    <size
        android:height="72dp"
        android:width="360dp" />
    <gradient
        android:type="linear"
        android:angle="270"
        android:useLevel="false"
        android:endColor="@color/colorBackground"
        android:centerColor="@color/colorBackground"
        android:startColor="#c8c8c8"

        />
</shape>