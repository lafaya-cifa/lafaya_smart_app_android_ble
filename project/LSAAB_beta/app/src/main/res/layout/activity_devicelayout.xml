<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackground"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="55dp">
    <!--android:layout_marginLeft="14dp"
        android:layout_marginBottom="14dp"
    android:layout_marginRight="14dp"-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动门列表"
                android:textSize="@dimen/text_size_device_menu1"
                android:textStyle="bold"
                android:textColor="@color/colorString"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/progress_scandevice"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">
                <com.github.rahatarmanahmed.cpv.CircularProgressView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    app:cpv_color="@color/colorString"
                    android:background="@color/colorBackground"
                    app:cpv_indeterminate="true"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_device_name"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="正在进行搜索... ..."/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="范围内可用自动门"
                android:textSize="@dimen/text_size_device_menu2"
                android:textColor="@color/colorString"/>
            <com.lafaya.toolbox.AutoCountListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list_devive_paired"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:dividerHeight="0dp"
                android:divider="@null">
            </com.lafaya.toolbox.AutoCountListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="范围内未配对设备"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text_size_device_menu2"
                android:textColor="@color/colorString"/>
            <com.lafaya.toolbox.AutoCountListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:id="@+id/list_devive_unpaired"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:dividerHeight="0dp"
                android:divider="@null">
            </com.lafaya.toolbox.AutoCountListView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:id="@+id/button_device_cancle"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="取消"
            android:textColor="@color/colorPrimary"
            android:shadowColor="@color/transparent"
            android:background="@color/transparent"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_size_device_menu2"/>
        <Button
            android:id="@+id/button_device_scan"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="扫描"
            android:background="@color/transparent"
            android:textSize="@dimen/text_size_device_menu2"
            android:textColor="@color/colorPrimary"
            android:shadowColor="@color/transparent"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>