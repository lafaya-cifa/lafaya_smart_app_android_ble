<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--title -->
        <include layout="@layout/layout_titlebar"/>
        <include layout="@layout/activity_drawerlayout"/>
        <include layout="@layout/activity_homelayout"/>
        <include layout="@layout/activity_settinglayout"/>
        <include layout="@layout/activity_modesetlayout"/>
        <include layout="@layout/activity_maintenancelayout"/>
        <include layout="@layout/activity_parameterlayout"/>
        <include layout="@layout/activity_infolayout"/>
        <include layout="@layout/activity_helplayout"/>
        <include layout="@layout/activity_aboutlayout"/>
        <include layout="@layout/activity_circularprogressbar"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <TextView
            android:id="@+id/view_exit_app"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:text="再按一次退出程序"
            android:textSize="13dp"
            android:textColor="#ffff"
            android:background="#96201815"
            />
    </RelativeLayout>

</RelativeLayout>