<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_maintenancelayout"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:id="@+id/layout_maintenance_button">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight_layout"
            android:background="#ffff"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/button_left_padding"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="重置自动门"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/colorString"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/button_maintenance_restart"
                    android:layout_width="wrap_content"
                    android:src="@drawable/forward_gray"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/button_topbottom_padding"
                    android:paddingBottom="@dimen/button_topbottom_padding"
                    android:layout_alignParentRight="true"
                    android:background="#ffff"
                    android:layout_gravity = "center_vertical|right"
                    android:paddingRight="@dimen/button_leftright_padding"
                    android:paddingLeft="@dimen/button_leftright_padding"
                    android:scaleType="fitCenter" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:background="@color/colorBackground"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_hight_layout"
            android:background="#ffff"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/button_left_padding"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="恢复出厂设置"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/colorString"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/button_maintenance_reset"
                    android:layout_width="wrap_content"
                    android:src="@drawable/forward_gray"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/button_topbottom_padding"
                    android:paddingBottom="@dimen/button_topbottom_padding"
                    android:layout_alignParentRight="true"
                    android:background="#ffff"
                    android:layout_gravity = "center_vertical|right"
                    android:paddingRight="@dimen/button_leftright_padding"
                    android:paddingLeft="@dimen/button_leftright_padding"
                    android:scaleType="fitCenter" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:background="@color/colorPrimary"
            android:text="取消"
            android:textSize="12.5dp"
            android:textColor="#ffff"
            android:id="@+id/button_maintenance_cancle"/>
        <View
            android:layout_width="2dp"
            android:layout_height="57dp"
            />
        <Button
            android:layout_width="180dp"
            android:layout_height="57dp"
            android:background="@color/colorPrimary"
            android:text="确定"
            android:textSize="12.5dp"
            android:textColor="#ffff"
            android:id="@+id/button_maintenance_enter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="322dp"
            android:layout_height="48dp"
            android:background="#ffff"
            android:textSize="14dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorString"
            android:id="@+id/text_maintenance_name"/>
        <TextView
            android:paddingTop="25dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"
            android:id="@+id/text_maintenance_info"/>
    </LinearLayout>

</RelativeLayout>