<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_parameter_revolvingdoor">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:background="@drawable/shap_rectangle"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorString"
                android:text="旋转自动门" />
            <ImageButton
                android:id="@+id/button_parameterrevolving_flod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="23dp"
                android:paddingBottom="23dp"
                android:src="@drawable/icon_fold"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_paramter_revolving">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cdcdcd"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.lafaya.toolbox.AutoCountListView
                    android:id="@+id/list_parameter_revolvingdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false"
                    android:dividerHeight="0.5dp">
                </com.lafaya.toolbox.AutoCountListView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout_paramter_position">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">
            <CheckBox
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textColor="@color/colorString"
                android:id="@+id/checkbox_position_summer"
                android:text="夏季停机位置"
                android:textSize="11dp"/>
            <TextView
                android:paddingLeft="30dp"
                android:id="@+id/text_parameter_position_summer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0mm/秒"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">
            <CheckBox
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="冬季停机位置"
                android:textSize="11dp"
                android:id="@+id/checkbox_position_winter"
                android:textColor="@color/colorString"/>
            <TextView
                android:paddingLeft="30dp"
                android:id="@+id/text_parameter_position_winter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0mm/秒"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">
            <CheckBox
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="平滑门停机位置"
                android:textSize="11dp"
                android:id="@+id/checkbox_position_middle"
                android:textColor="@color/colorString"/>

            <TextView
                android:paddingLeft="30dp"
                android:id="@+id/text_parameter_position_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0mm/秒"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">
            <CheckBox
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="危险区1起点位置"
                android:id="@+id/checkbox_position_risk1start"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
            <TextView
                android:paddingLeft="30dp"
                android:id="@+id/text_parameter_position_risk1_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0mm/秒"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">
            <CheckBox
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="危险区1终点位置"
                android:textSize="11dp"
                android:id="@+id/checkbox_position_risk1end"
                android:textColor="@color/colorString"/>
            <TextView
                android:paddingLeft="30dp"
                android:id="@+id/text_parameter_position_risk1_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0mm/秒"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">
            <CheckBox
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="危险区2起点位置"
                android:textSize="11dp"
                android:id="@+id/checkbox_position_risk2start"
                android:textColor="@color/colorString"/>
            <TextView
                android:paddingLeft="30dp"
                android:id="@+id/text_parameter_position_risk2_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0mm/秒"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="45dp"
            android:paddingRight="45dp">
            <CheckBox
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="危险区2终点位置"
                android:textSize="11dp"
                android:id="@+id/checkbox_position_risk2end"
                android:textColor="@color/colorString"/>
            <TextView
                android:paddingLeft="30dp"
                android:id="@+id/text_parameter_position_risk2_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0mm/秒"
                android:textSize="11dp"
                android:textColor="@color/colorString"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>