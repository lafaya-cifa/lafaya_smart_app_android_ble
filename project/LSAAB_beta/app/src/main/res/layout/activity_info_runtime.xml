<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_info_runtime"
    android:visibility="invisible"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/button_left_padding"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/button_left_padding">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="当前运行次数"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="累计运行次数"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/layout_info_revolving_runtimecurrent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/button_left_padding"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/button_left_padding">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="主系统运行次数"
            android:textSize="11dp"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_revolving_runtimecurrent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_revolving_runtimehistory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/button_left_padding"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/button_left_padding">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="中间门运行次数"
            android:id="@+id/text_info_sliding_runtimecurrent_name"
            android:textSize="11dp"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_sliding_runtimecurrent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_sliding_runtimehistory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="--------"
            android:textSize="11dp"
            android:textColor="@color/colorString"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info_leftwing_runtimecurrent"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/button_left_padding"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/button_left_padding">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="左门翼运行次数"
            android:textSize="11dp"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_leftwing_runtimecurrent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="--------"
            android:textSize="11dp"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_leftwing_runtimehistory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="--------"
            android:textSize="11dp"
            android:textColor="@color/colorString"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info_rigthwing_runtimecurrent"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/button_left_padding"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/button_left_padding">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="右门翼运行次数"
            android:textSize="11dp"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_rigthwing_runtimecurrent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
        <TextView
            android:id="@+id/text_info_rigthwing_runtimehistory"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="--------"
            android:textSize="11dp"
            android:gravity="center"
            android:textColor="@color/colorString"/>
    </LinearLayout>
</LinearLayout>